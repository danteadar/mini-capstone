<h1>New Image</h1>

<%= form_tag "/images", method: :post do %>

<form class="form-horizontal">
  <div class="form-group">
    <label for="product_id" class="col-sm-2 control-label">Product ID:</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" name="product_id" placeholder="0">
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Image URL:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="url" placeholder="URL">
    </div>
  </div>
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" value = "images" class="btn btn-default">Add Image</button>
    </div>
  </div>
</form>

<% end %>

